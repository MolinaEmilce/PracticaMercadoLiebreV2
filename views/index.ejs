<!DOCTYPE html>
<html lang="en">
	<%- include('partials/head') %> 
<body>
	<!-- Header -->
	<%- include('partials/header') %> 
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>

			<% productosEnVisitas.forEach(cadaProducto => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%- cadaProducto.id%>/<%- cadaProducto.category%>  ">
							<figure class="product-box_image">
								<img src="/images/products/<%= cadaProducto.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%= (cadaProducto.price - cadaProducto.price * cadaProducto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,
									".")  %> </h2>
								
								<% if(cadaProducto.discount != 0){ %>
								<span><%= cadaProducto.discount %> % OFF</span>
								<% } %> 
									<p><%= cadaProducto.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }); %> 
			
			
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			
			<% productosEnOfertas.forEach(cadaProducto => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%= cadaProducto.id %>/<%= cadaProducto.category %>  ">
							<figure class="product-box_image">
								<img src="/images/products/<%= cadaProducto.image %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%= (cadaProducto.price - cadaProducto.price * cadaProducto.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g,
									".")  %> </h2>
								
								<% if(cadaProducto.discount != 0){ %>
								<span><%= cadaProducto.discount %> % OFF</span>
								<% } %> 
									<p><%= cadaProducto.name %> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% }); %> 

		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %> 
	<!-- /footer -->


 <!-- scripts -->
<%- include('partials/scripts.ejs') %> 
<!-- end scripts -->

</body>
</html>